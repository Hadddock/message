extends layout.pug
block content 
    h1= "Become an admin!"
    h2= "Enter the administrator password become an administrator!"
    form(method='POST')
        label(for='password') Password:
        input#password.form-control(type='text', placeholder='Password' name='password' required value=(""))
        button.btn.btn-primary(type='submit') Submit
    if errors
        ul
        for error in errors
            li!= error.msg