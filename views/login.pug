extends layout.pug
block content 
    h1= "Login here!"
    form(method='POST')
        label(for='username') Username:
        input#username.form-control(type='text', placeholder='Username' name='username' required value=(undefined===user ? '' : user.username) )
        label(for='password') Password:
        input#password.form-control(type='text', placeholder='Password' name='password' required value=(""))
        button.btn.btn-primary(type='submit') Submit
    if errors
        ul
        for error in errors
            li!= error.msg